<h1><%= @inn.brand_name %></h1>
<h2>Detalhes da pousada</h2>
<%= link_to Room.model_name.human(count: @inn.rooms.count), inn_rooms_path(@inn) %>
<% if current_user && current_user.inn %>
  <% if @inn == current_user.inn %>
    <div>
      <ul>
        <li><%= Inn.human_attribute_name(:corporate_name) %>: <%= @inn.corporate_name %></li>
        <li><%= Inn.human_attribute_name(:brand_name) %>: <%= @inn.brand_name %></li>
        <li><%= Inn.human_attribute_name(:registration_number) %>: <%= @inn.registration_number %></li>
        <li><%= Inn.human_attribute_name(:name) %>: <%= @inn.brand_name %></li>
        <li><%= Inn.human_attribute_name(:phone) %>: <%= @inn.phone %></li>
        <li><%= Inn.human_attribute_name(:email)%>: <%= @inn.email %></li>
        <li><%= Inn.human_attribute_name(:address)%> completo: <%= @inn.address %>. <%= @inn.district %>, <%= @inn.city %> - <%= @inn.state %>.</li>
        <li><%= Inn.human_attribute_name(:zip_code)%>: <%= @inn.zip_code %></li>
        <li><%= Inn.human_attribute_name(:description)%>: <%= @inn.description %></li>
        <li><%= Inn.human_attribute_name(:payment_methods)%>:
        <% eval(@inn.payment_methods).each do |method| %>
          <p><%= method %></p>
        <%end%>
        </li>
        <li>
          <p><%= accepts_pets?(@inn.accepts_pets?) %></p>
        </li>
        <li>
          <p><%= Inn.human_attribute_name(:terms_of_service)%>: <%= @inn.terms_of_service %></p>
        </li>
        <li>
          <p><%= Inn.human_attribute_name(:check_in_check_out_time)%>: <%= @inn.check_in_check_out_time.strftime("%H:%M") %></p>
        </li>
        <li>
          <% if @inn.draft? %>
            <h4>ATENÇÃO: Ao publicar a pousada ela poderá ser visualizada por outros usuários.</h4>
            <%= button_to 'Publicar pousada', publish_inn_path(@inn.id), {method: 'patch'}%>
          <% else %>
            <%= button_to 'Esconder pousada', draft_inn_path(@inn.id), {method: 'patch'}%>
          <%end%>
        </li>
      </ul>
      <div>
        <%= link_to 'Editar', edit_inn_path(@inn)%>
      </div>
    </div>
  <%end%>
<%end%>
<% if current_user.nil? || current_user.inn != @inn %>
  <div>
    <ul>
      <li><%= Inn.human_attribute_name(:name) %>: <%= @inn.brand_name %></li>
      <li><%= Inn.human_attribute_name(:phone) %>: <%= @inn.phone %></li>
      <li><%= Inn.human_attribute_name(:email)%>: <%= @inn.email %></li>
      <li><%= Inn.human_attribute_name(:address)%> completo: <%= @inn.address %>. <%= @inn.district %>, <%= @inn.city %> - <%= @inn.state %>.</li>
      <li><%= Inn.human_attribute_name(:zip_code)%>: <%= @inn.zip_code %></li>
      <li><%= Inn.human_attribute_name(:description)%>: <%= @inn.description %></li>
      <li><%= Inn.human_attribute_name(:payment_methods)%>:
      <% eval(@inn.payment_methods).each do |method| %>
        <p><%= method %></p>
      <%end%>
      </li>
      <li>
        <p><%= accepts_pets?(@inn.accepts_pets?) %></p>
      </li>
      <li>
        <p><%= Inn.human_attribute_name(:terms_of_service)%>: <%= @inn.terms_of_service %></p>
      </li>
      <li>
        <p><%= Inn.human_attribute_name(:check_in_check_out_time)%>: <%= @inn.check_in_check_out_time.strftime("%H:%M") %></p>
      </li>
    </ul>
  </div>
<%end%>