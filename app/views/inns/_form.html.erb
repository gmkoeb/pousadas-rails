<%= form_with model:@inn, html: {class: "row g-3 w-50 mt-3"} do |f| %>
  <div class="col-md-6">
    <%= f.label :corporate_name, class: "form-label text-secondary" %>
    <%= f.text_field :corporate_name, placeholder: "Nome legal da empresa", class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :brand_name, class: "form-label" %>
    <%= f.text_field :brand_name, placeholder: "Nome comercial da empresa", class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :registration_number, class: "form-label" %>
    <%= f.text_field :registration_number, placeholder: "00.000.000/0000-00", class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :phone, class: "form-label"%>
    <%= f.telephone_field :phone, placeholder: "(99) 99999-9999", class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, placeholder: "exemplo@dominio.com", class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :city, class: "form-label" %>
    <%= f.text_field :city, placeholder: "Cidade", class: "form-control" %>
  </div>

  <div class="col-md-4">
    <%= f.label :state, class: "form-label" %>
    <%= f.text_field :state, placeholder: "Estado", class: "form-control" %>
  </div>


  <div class="col-md-2">
    <%= f.label :zip_code, class: "form-label" %>
    <%= f.text_field :zip_code, placeholder: "00000-000",  class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :address, class: "form-label" %>
    <%= f.text_field :address, placeholder: "Rua e número", class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.label :district, class: "form-label" %>
    <%= f.text_field :district, placeholder: "Bairro", class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, placeholder: "Faça uma breve descrição da sua pousada",  class: "form-control" %>
  </div>

  <div class="col-md-12">
  <%= f.label :payment_methods, class: "form-label" %>  
  <% payment_methods.each do |payment_method| %>
    <div class="d-flex gap-3">
      <%= f.check_box :payment_methods, { checked: accepted_payment(payment_method), multiple: true, class: "form-check-input" }, payment_method, nil %>
      <%= label_tag :payment_methods, payment_method, class: "form-check-label" %>
    </div>
  <% end %>
  </div>

  <div class="col-md-12">
    <%= f.label :accepts_pets, 'Sua pousada permite pets?', class: "form-label" %>
    <div class="d-flex" >
      <div>
        <%= f.radio_button :accepts_pets, :true, class: "form-check-input" %>
        <%= f.label :true, 'Sim', class: "form-check-label" %>
      </div>
      <div class="mx-4">
        <%= f.radio_button :accepts_pets, :false, class: "form-check-input" %>
        <%= f.label :false, 'Não', class: "form-check-label" %>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <%= f.label :terms_of_service, class: "form-label" %>
    <%= f.text_area :terms_of_service, placeholder: "Regras da pousada", class: "form-control" %>
  </div>

  <div class="d-flex flex-column col-md-12">
    <%= f.label :check_in_check_out_time, class: "form-label" %>
    <div class="d-flex gap-2">
      <%= f.datetime_select :check_in_check_out_time, { minute_step: 15, 
                                                        include_seconds: false, 
                                                        discard_year: true, 
                                                        discard_month: true, 
                                                        discard_day: true, 
                                                        default: Time.zone.now.change(year: 2000)}, class: "form-select form-select-md text-center" %>
    </div>
  </div>
  <div class="d-flex flex-column">
    <p>Foto da Pousada (opcional)</p>
    <%= f.file_field :picture, onchange: 'displayImagePreview(this)' %>
    <label class="text-center mt-5" for="picture"></label>
      <img id="image-preview" src="#" alt="Imagem da Pousada" class="d-none w-50 h-50 mx-auto mt-3">
    </div>
  <div>
    <%= f.submit class: "btn btn-primary mb-3 w-100 text-white" %>
  </div>

<% end %>