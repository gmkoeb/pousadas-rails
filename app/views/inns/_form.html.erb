<%= form_with model:@inn do |f| %>
<div>
  <%= f.label :corporate_name %>
  <%= f.text_field :corporate_name %>
</div>

<div>
  <%= f.label :brand_name %>
  <%= f.text_field :brand_name %>
</div>

<div>
  <%= f.label :registration_number %>
  <%= f.text_field :registration_number %>
</div>

<div>
  <%= f.label :phone %>
  <%= f.telephone_field :phone %>
</div>

<div>
  <%= f.label :email %>
  <%= f.email_field :email %>
</div>

<div>
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div>
  <%= f.label :district %>
  <%= f.text_field :district %>
</div>

<div>
  <%= f.label :state %>
  <%= f.text_field :state %>
</div>

<div>
  <%= f.label :city %>
  <%= f.text_field :city %>
</div>

<div>
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>
</div>

<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<div>
<%= f.label :payment_methods %> <br>  
<% payment_methods = ["Dinheiro", "PIX", "Cartão de crédito", "Cartão de débito"] %>
<% payment_methods.each do |payment_method| %>
  <%= f.check_box :payment_methods, { checked: accepted_payment(payment_method), multiple: true }, payment_method, nil %>
  <%= label_tag :payment_methods, payment_method %>
<% end %>
</div>

<div>
  <%= f.label :accepts_pets %>
  <%= f.check_box :accepts_pets %>
</div>

<div>
  <%= f.label :terms_of_service %>
  <%= f.text_area :terms_of_service %>
</div>

<div>
  <%= f.label :check_in_check_out_time %>
  <%= f.time_select :check_in_check_out_time %>
</div>

<%= f.submit %>
<% end %>