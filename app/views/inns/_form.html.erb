<%= form_with model:@inn, html: {class: "row g-3 w-50 mt-3"} do |f| %>
  <div class="col-md-6">
    <%= f.label :corporate_name, class: "form-label" %>
    <%= f.text_field :corporate_name, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :brand_name, class: "form-label" %>
    <%= f.text_field :brand_name, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :registration_number, class: "form-label" %>
    <%= f.text_field :registration_number, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :phone, class: "form-label"%>
    <%= f.telephone_field :phone, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :city, class: "form-label" %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="col-md-4">
    <%= f.label :state, class: "form-label" %>
    <%= f.text_field :state, class: "form-control" %>
  </div>


  <div class="col-md-2">
    <%= f.label :zip_code, class: "form-label" %>
    <%= f.text_field :zip_code, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :address, class: "form-label" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.label :district, class: "form-label" %>
    <%= f.text_field :district, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="col-md-12">
  <%= f.label :payment_methods, class: "form-label" %>  
  <% payment_methods.each do |payment_method| %>
    <div class="d-flex gap-3">
      <%= f.check_box :payment_methods, { checked: accepted_payment(payment_method), multiple: true, class: "form-check-input" }, payment_method, nil %>
      <%= label_tag :payment_methods, payment_method, class: "form-check-label" %>
    </div>
  <% end %>
  </div>

  <div class="col-md-12">
    <%= f.label :accepts_pets, 'Sua pousada permite pets?', class: "form-label" %>
    <div class="d-flex" >
      <div>
        <%= f.radio_button :accepts_pets, :true, class: "form-check-input" %>
        <%= f.label :true, 'Sim', class: "form-check-label" %>
      </div>
      <div class="mx-4">
        <%= f.radio_button :accepts_pets, :false, class: "form-check-input" %>
        <%= f.label :false, 'NÃ£o', class: "form-check-label" %>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <%= f.label :terms_of_service, class: "form-label" %>
    <%= f.text_area :terms_of_service, class: "form-control" %>
  </div>

  <div class="d-flex flex-column col-md-12">
    <%= f.label :check_in_check_out_time, class: "form-label" %>
    <div class="d-flex gap-2">
      <%= f.time_select :check_in_check_out_time, class: "form-select form-select-sm"  %>
    </div>
  </div>
  <div>
    <%= f.submit class: "btn btn-primary mb-3 w-100" %>
  </div>

<% end %>