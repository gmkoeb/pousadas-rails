<!DOCTYPE html>
<html>
  <head>
    <title>PousadasRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <%= link_to root_path do %>
        <h1>Pousadas Rails</h1>
      <% end %>
      <nav>
      <% if user_signed_in? %>
        <%= current_user.email %> |
        <% if current_user.admin? %>
          <% if current_user.inn %>
            <%= link_to 'Minha pousada', inn_path(current_user.inn) %>
          <% else %>
            <%= link_to 'Cadastrar pousada', new_inn_path %>
          <% end %> 
        <% end %>
        <%= button_to 'Sair', destroy_user_session_path, method: :delete %> 
      <% else %>
        <%= link_to 'Entrar', new_user_session_path %>
      <% end %> 
        <div>
          <%= form_with(url: search_inns_path, method: :get) do |f|%>
            <%= f.label :query, 'Buscar Pousadas' %>
            <%= f.text_field :query, placeholder: 'Nome, cidade ou bairro' %>
            <%= f.submit 'Buscar' %>
          <% end %>
          <%= link_to 'busca avançada', advanced_search_form_inns_path %>
        </div>
      </nav>
    </header>
    <div>
    <% if flash.alert %>
      <div id=”error_explanation”>
      <p> <%= flash.alert %> </p>
    </div>
    <% end %>
      <p> <%= notice %> </p>
    </div>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
