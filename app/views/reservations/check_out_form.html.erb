<h1>Formulário de Check-Out</h1>
<div class="text-center my-2">  
  <h5>Hóspede: <%= @reservation.user.name %> </h5>
  <h5>CPF: <%= @reservation.user.registration_number %></h5>
  <h5>Quarto: <%= @room.name %></h5>
  <%= form_with(url: check_out_reservation_path(@reservation), method: :patch, html: {class: "row g-3 w-75 mt-3 mx-auto"}) do |f| %>
    <h2><%= f.label :payment_method, 'Forma de Pagamento', class: "form-label" %></h2>
    <div class="col-md-12 d-flex justify-content-center gap-2">
      <% @payment_methods.each do |method| %>
        <p class="fw-bold"><%= f.label :payment_method, method %></p>
        <%= f.radio_button :payment_method, method, required: 'required'  %>
      <% end %>
    </div> 
    <h3>Valor Total: R$<%= @total_price %></h3>
    <%= f.submit 'Finalizar Reserva', class: "btn btn-info w-25 mx-auto" %>
  <% end %>
</div>