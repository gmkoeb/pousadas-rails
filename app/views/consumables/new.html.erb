<h1>Adicionar Consumível</h1>

<% if @consumable.errors.any? %>
  <div class="rounded p-2 border border-1 fw-bold mt-3">
    <h4 class="text-center">Verifique os erros abaixo:</h4>
    <ul>
      <% @consumable.errors.full_messages.each do |msg| %>
      <li class="text-danger"><%=msg%></li>
      <%end%>
    </ul>
  </div>
<% end %>

<%= form_with model: [@reservation, @consumable], html: {class: "row g-3 w-50 mt-3"} do |f| %>
  <div class="col-md-6">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :value, class: "form-label" %>
    <%= f.number_field :value, class: "form-control" %>
  </div>
  <div class="text-center">
    <%= f.submit 'Adicionar Consumível', class: "btn btn-info w-25" %>
  </div>
<% end %>