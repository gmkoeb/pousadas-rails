<% if @consumable.errors.any? %>
  <div class="rounded p-2 border border-1 fw-bold mt-3">
    <h4 class="text-center">Verifique os erros abaixo:</h4>
    <ul>
      <% @consumable.errors.full_messages.each do |msg| %>
      <li class="text-danger"><%=msg%></li>
      <%end%>
    </ul>
  </div>
<% end %>

<%= form_with model: [@reservation, @consumable] do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :value %>
    <%= f.number_field :value %>
  </div>
  <%= f.submit 'Adicionar' %>
<% end %>